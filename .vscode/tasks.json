{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "shell",
			"command": "./scripts/run-ci-locally.sh",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "./scripts/run-ci-locally.sh"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo check"
		},
		{
			"type": "shell",
			"command": "./scripts/cargo-clippy.sh",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "./scripts/cargo-clippy.sh"
		},
	]
