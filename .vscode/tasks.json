{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "build",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo build"
		},
		{
			"type": "shell",
			"command": "./scripts/run-ci-locally.sh",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "./scripts/run-ci-locally.sh"
		},
		{
			"type": "cargo",
			"command": "test",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo test"
		},
		{
			"type": "cargo",
			"command": "check",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "rust: cargo check"
		},
		{
			"type": "cargo",
			"command": "clippy",
			"args": [
				"--locked",
				"--all-targets",
				"--all-features",
				"--",
				"--deny",
				"--deny",
				"clippy::pedantic",
				"--deny",
				"warnings",
				"--deny",
				"unsafe_code"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "cargo clippy (for Windows)"
		},
		{
			"type": "shell",
			"command": "./scripts/cargo-clippy.sh",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "./scripts/cargo-clippy.sh"
		},
	]
}
